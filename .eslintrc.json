{
    "plugins": [
        "screeps"
    ],
    "env": {
        "es6": true,
        "node": true,
        "screeps/screeps": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "no-console": 0,
        "eol-last": 2,
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}
